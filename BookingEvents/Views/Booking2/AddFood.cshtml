@model BookingEvents.Models.AddFoodModel

@{
    ViewBag.Title = "AddFood";
}
<h2>AddFoodItem</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @*@Html.HiddenFor(m => m.BookingId)
    @Html.HiddenFor(m => m.DateCreated)
    @Html.HiddenFor(m => m.EventDate)
    @Html.HiddenFor(m => m.EventId)
    @Html.HiddenFor(m => m.NumPeople)*@
    <div class="form-group">
        <div class="col-10 mx-auto my-3 col-md-6 col-lg-4">
            <strong>Select Your Food Choice :</strong>
            @foreach (var item in Model.AddFoods)
            {
                <div class="form-group">
                    <div class="col-md-10">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"
                                       name="SelectedFruits"
                                       value="@item.FoodName" /> @item.FoodName
                                </label>
                            </div>
                        </div>
                    </div>
                }
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Food" class="btn btn-primary" />
        </div>
    </div>
}


