@model IEnumerable<BookingEvents.Models.Item>

@{
    ViewBag.Title = "List of Items";

    //Layout = "~/Views/Shared/_ShopLayout.cshtml";

    Layout = "~/Views/Shared/_Layout.cshtml";


}
<br  id="item" />
<br />
<br />
<br />
<br />
<a href="@Url.Action("Create", "Items")" button class="btn"><i class="fa fa-plus-circle"></i> Add New</a>

<link href="~/assets/css/demo1/style.bundle.css" rel="stylesheet" />
<br />
<br />
<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">

        <table class="table table-hover table-striped table-responsive" id="my_list">
            <thead>
                <tr class="table-header-row">
                    <th>
                        @Html.DisplayNameFor(model => model.Picture)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        Category
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.QuantityInStock)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a><img src="data:image/png;base64,@Convert.ToBase64String(item.Picture, 0, item.Picture.Length)" style="width: 40px; height: 40px" alt="" /></a>
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department.Department_Name)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.QuantityInStock)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>

                        <td>
                            <a href="@Url.Action("Details","Items", new { id=item.ItemCode })" rel="tooltip" title="View" class="btn btn-info btn-simple btn-xs"><i class="fa fa-eye">Details</i></a>
                            <a href="@Url.Action("Edit","Items", new { id=item.ItemCode })" rel="tooltip" title="Edit" class="btn btn-success btn-simple btn-xs"><i class="fa fa-edit">Edit</i></a>
                            <a href="@Url.Action("Delete", "Items", new { id = item.ItemCode })" rel="tooltip" title="Remove" class="btn btn-danger btn-simple btn-xs"><i class="fa fa-times">Delete</i></a>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </div>



    <script type="text/javascript">
        $('#my_list').dataTable(
            {
                dom: 'Bfrtip',
                lengthMenu: [
                    [10, 25, 50, -1],
                    ['10 rows', '25 rows', '50 rows', 'Show all']
                ],
                buttons: [
                    'pageLength', 'csv', 'pdf', 'print'
                ],
                language: { search: "" },
                select: true
            }
        );
        $(".dataTables_filter input").addClass("search-input");
        $(".dataTables_filter input").attr('placeholder', 'Search');
        $('#my_list')
            .removeClass('display')
            .addClass('table table-striped table-hover');
    </script>
